<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @mfnw.name %>
</p>

<p>
  <b>Genre:</b>
  <%= @mfnw.genre %>
</p>

<p>
  <b>Picture:</b>
  <%= image_tag(@mfnw.picture_url, :width => 600) if @mfnw.picture.present? %>
  <h3>Comments</h3>
  <% @mfnw.comments.each do |comment| %>
    <div>
      <strong><%= comment.user_name %></strong>
      <br />
      <p><%= comment.body %><p>
    </div>
  <% end %>
  <%= render 'comments/form' %>
</p>


<%= link_to 'Edit', edit_mfnw_path(@mfnw) %> |
<%= link_to 'Back', mfnws_path %>
